<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Begins the styles in the FORM ACTIVITIES -->

    <!-- theme for the input fields in the form -->
    <style name="FormInputFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- theme for the short form prompts -->
    <style name="FormLabelStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- theme for the short edit texts in the form -->
    <style name="FormEditTextShortStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- theme for the small buttons in the form -->
    <style name="SmallButtonStyle">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- theme for the note label in the form activities-->
    <style name="FormLabelNoteStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- theme for the note paragraph in form activities -->
    <style name="FormEditTextLongStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">5</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- theme for the save button in the form -->
    <style name="FormSaveButtonStyle">
        <item name="android:layout_width">@dimen/form_button_width</item>
        <item name="android:layout_height">@dimen/form_button_height</item>
    </style>

    <!-- theme for the delete button in the form -->
    <style name="FormDeleteButtonStyle">
        <item name="android:layout_width">@dimen/form_button_width</item>
        <item name="android:layout_height">@dimen/form_button_height</item>
    </style>
    <!-- ends the styles used in the FORM ACTIVITIES -->

    <!-- ListView style -->
    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- InstructorPrompt styles -->
    <style name="AppTheme.PopupTheme" >
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Strings related to Calendar Activity  -->
    <string name="calendarAccountLabel">Google Account: </string>
    <string name="calendarAccountButton">Default Text</string>
    <string name="calendarAccountHelpText">Click to select an account</string>
    <string name="calendarToggleLabel">Enable Google Calendar</string>
    <string name="calendarToggleHelpText">Allow adding events to your Google Calendar</string>
    <string name="calendarViewButton">View Google Calendar</string>

</resources>
