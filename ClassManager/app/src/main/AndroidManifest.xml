<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.camdavejakerob.classmanager">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AssignmentActivity" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_login" />

        <activity
            android:name=".ClassAddListActivity"
            android:label="@string/title_activity_class_add_list" />

        <activity
            android:name=".ClassActivity"
            android:label="My Classes"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".ClassInfoActivity"
            android:parentActivityName=".ClassActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".InfoActivity"
            android:label="Information"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".ChatActivity"
            android:label="Discussion Board"></activity>

        <activity android:name=".UploadSyllabusActivity"
            android:label="Upload Syllabus"
            android:parentActivityName=".ClassInfoActivity"></activity>

        <activity
            android:name=".RosterActivity"
            android:label="Class Roster"></activity>

        <activity
            android:name=".InstructorPromptActivity"
            android:theme="@style/AppTheme.PopupTheme"></activity>

        <activity
            android:name=".GradesActivity"
            android:label="My Grades"></activity>

        <activity
            android:name=".MessageActivity"
            android:label="Messages"
            android:parentActivityName=".MainActivity"></activity>

        <activity android:name=".SettingActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>
